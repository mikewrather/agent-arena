{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://triad.dev/schemas/critique.schema.json",
  "title": "Critique",
  "description": "Structured critique output from a critic agent in the reliable generation pipeline",
  "type": "object",
  "required": ["constraint_id", "overall", "issues", "summary"],
  "properties": {
    "constraint_id": {
      "type": "string",
      "description": "ID of the constraint being evaluated"
    },
    "reviewer": {
      "type": "string",
      "description": "Name of the agent performing the critique"
    },
    "iteration": {
      "type": "integer",
      "minimum": 1,
      "description": "Iteration number in the generation loop"
    },
    "overall": {
      "type": "string",
      "enum": ["PASS", "FAIL", "ERROR"],
      "description": "Overall assessment - PASS if no issues, FAIL if issues found"
    },
    "issues": {
      "type": "array",
      "description": "List of issues found during critique",
      "items": {
        "type": "object",
        "required": ["id", "rule_id", "severity", "location", "finding", "evidence"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z]+-[0-9]+$",
            "description": "Unique issue identifier (constraint-id format, e.g., safety-001)"
          },
          "rule_id": {
            "type": "string",
            "description": "ID of the rule that was violated"
          },
          "severity": {
            "type": "string",
            "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"],
            "description": "Severity level of the issue"
          },
          "location": {
            "type": "string",
            "description": "Location in the artifact where issue was found"
          },
          "finding": {
            "type": "string",
            "description": "Description of what is wrong"
          },
          "evidence": {
            "type": "string",
            "description": "Quote or reference from rules supporting the finding"
          },
          "suggested_fix": {
            "type": "string",
            "description": "Suggested fix for the issue"
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence in the finding (0.0-1.0)"
          }
        }
      }
    },
    "approved_sections": {
      "type": "array",
      "description": "Sections that passed all criteria",
      "items": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "Location of approved section"
          },
          "note": {
            "type": "string",
            "description": "Note about why this section was approved"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of the critique findings"
    }
  },
  "examples": [
    {
      "constraint_id": "safety",
      "reviewer": "claude",
      "iteration": 1,
      "overall": "FAIL",
      "issues": [
        {
          "id": "safety-001",
          "rule_id": "no-unresolved-fear",
          "severity": "CRITICAL",
          "location": "paragraph 12-15",
          "finding": "Scene ends with child alone in dark forest",
          "evidence": "Violates: 'Fear scenarios must resolve within scene'",
          "suggested_fix": "Add companion or resolution before scene end",
          "confidence": 0.95
        }
      ],
      "approved_sections": [
        {
          "location": "paragraphs 1-5",
          "note": "Opening meets all safety criteria"
        }
      ],
      "summary": "1 CRITICAL issue found. Scene ending violates fear resolution rule."
    }
  ]
}
