{
  "SubagentStop": [
    {
      "matcher": "arena",
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/hitl-handler.sh"
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": "Bash(python3*arena.py*)",
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/hitl-handler.sh"
        }
      ]
    }
  ],
  "Notification": [
    {
      "matcher": "*",
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/notification-formatter.sh"
        }
      ]
    }
  ]
}
